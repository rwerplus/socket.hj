{
  "extends": "./tsconfig.json",
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "declaration": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "./build/es6",
    "declarationDir": "./build/types",
    "tsBuildInfoFile": "./build/tsconfig.tsbuildinfo"
  }
}
